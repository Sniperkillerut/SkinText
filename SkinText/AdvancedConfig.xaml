                <ToolTip Style="{DynamicResource ToolTipStyle}">
                    <Border Style="{DynamicResource ToolTipBorderStyle}">
                        <TextBlock Text="Set SkinText Border Color" Style="{DynamicResource ToolTipTextStyle}" />
                    </Border>
                </ToolTip>
            </Label.ToolTip>
            <TextBlock Text="Background: " Style="{DynamicResource ToolTipTextStyle}" />
        </Label>
        <xctk:ColorPicker x:Name="ClrPcker_BackgroundColorBrush"
