                        <Label Grid.Column="0" Grid.Row="14">
                            <TextBlock Text="Main Window Color: " Style="{DynamicResource ToolTipTextStyle}" />
                        </Label>
                        <xctk:ColorPicker x:Name="ClrPcker_MainWindowBackgroundColorBrush"
                          Grid.Column="1" Grid.Row="14"
